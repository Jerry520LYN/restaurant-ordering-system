{"ast":null,"code":"import { useMenuStore } from '@/stores/menu';\nexport default {\n  name: 'MenuCard',\n  props: {\n    isHotDishes: {\n      type: Boolean,\n      default: false\n    }\n  },\n  data() {\n    return {\n      menuList: [],\n      hotDishes: [{\n        dishId: 'hot1',\n        dishName: '宫保鸡丁',\n        description: '经典川菜，鸡肉鲜嫩，花生香脆，口感丰富',\n        price: 28,\n        imageUrl: 'https://images.unsplash.com/photo-1567620905732-2d1ec7ab7445?w=400&h=300&fit=crop'\n      }, {\n        dishId: 'hot2',\n        dishName: '麻婆豆腐',\n        description: '嫩滑豆腐配以麻辣鲜香的肉末，下饭神器',\n        price: 22,\n        imageUrl: 'https://images.unsplash.com/photo-1567620905732-2d1ec7ab7445?w=400&h=300&fit=crop'\n      }, {\n        dishId: 'hot3',\n        dishName: '水煮鱼',\n        description: '新鲜草鱼片，麻辣鲜香，鱼肉嫩滑',\n        price: 45,\n        imageUrl: 'https://images.unsplash.com/photo-1567620905732-2d1ec7ab7445?w=400&h=300&fit=crop'\n      }, {\n        dishId: 'hot4',\n        dishName: '回锅肉',\n        description: '肥而不腻，香辣可口，经典川菜代表',\n        price: 32,\n        imageUrl: 'https://images.unsplash.com/photo-1567620905732-2d1ec7ab7445?w=400&h=300&fit=crop'\n      }]\n    };\n  },\n  computed: {\n    displayList() {\n      return this.isHotDishes ? this.hotDishes : this.menuList;\n    }\n  },\n  mounted() {\n    if (!this.isHotDishes) {\n      this.fetchMenuList();\n    }\n  },\n  methods: {\n    async fetchMenuList() {\n      const menuStore = useMenuStore();\n      await menuStore.fetchMenuList();\n      this.menuList = menuStore.menuList;\n    },\n    addToCart(item) {\n      // 这里可以添加购物车逻辑\n      console.log('添加到购物车:', item);\n    }\n  }\n};","map":{"version":3,"names":["useMenuStore","name","props","isHotDishes","type","Boolean","default","data","menuList","hotDishes","dishId","dishName","description","price","imageUrl","computed","displayList","mounted","fetchMenuList","methods","menuStore","addToCart","item","console","log"],"sources":["D:\\数据库课程设计（饭店系统）\\restaurant-ordering-system\\src\\components\\menu\\MenuCard.vue"],"sourcesContent":["<template>\r\n  <div class=\"grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6\">\r\n    <div v-for=\"item in displayList\" :key=\"item.dishId\" class=\"bg-white rounded-lg shadow-md overflow-hidden\">\r\n      <img :src=\"item.imageUrl\" :alt=\"item.dishName\" class=\"w-full h-48 object-cover\">\r\n      <div class=\"p-4\">\r\n        <h3 class=\"text-lg font-semibold text-gray-800 mb-2\">{{ item.dishName }}</h3>\r\n        <p class=\"text-sm text-gray-600 mb-3 line-clamp-2\">{{ item.description }}</p>\r\n        <div class=\"flex justify-between items-center\">\r\n          <span class=\"text-xl font-bold text-red-500\">¥{{ item.price }}</span>\r\n          <button \r\n            @click=\"addToCart(item)\"\r\n            class=\"bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors duration-200\"\r\n          >\r\n            加入购物车\r\n          </button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { useMenuStore } from '@/stores/menu'\r\n\r\nexport default {\r\n  name: 'MenuCard',\r\n  props: {\r\n    isHotDishes: {\r\n      type: Boolean,\r\n      default: false\r\n    }\r\n  },\r\n  data() {\r\n    return {\r\n      menuList: [],\r\n      hotDishes: [\r\n        {\r\n          dishId: 'hot1',\r\n          dishName: '宫保鸡丁',\r\n          description: '经典川菜，鸡肉鲜嫩，花生香脆，口感丰富',\r\n          price: 28,\r\n          imageUrl: 'https://images.unsplash.com/photo-1567620905732-2d1ec7ab7445?w=400&h=300&fit=crop'\r\n        },\r\n        {\r\n          dishId: 'hot2',\r\n          dishName: '麻婆豆腐',\r\n          description: '嫩滑豆腐配以麻辣鲜香的肉末，下饭神器',\r\n          price: 22,\r\n          imageUrl: 'https://images.unsplash.com/photo-1567620905732-2d1ec7ab7445?w=400&h=300&fit=crop'\r\n        },\r\n        {\r\n          dishId: 'hot3',\r\n          dishName: '水煮鱼',\r\n          description: '新鲜草鱼片，麻辣鲜香，鱼肉嫩滑',\r\n          price: 45,\r\n          imageUrl: 'https://images.unsplash.com/photo-1567620905732-2d1ec7ab7445?w=400&h=300&fit=crop'\r\n        },\r\n        {\r\n          dishId: 'hot4',\r\n          dishName: '回锅肉',\r\n          description: '肥而不腻，香辣可口，经典川菜代表',\r\n          price: 32,\r\n          imageUrl: 'https://images.unsplash.com/photo-1567620905732-2d1ec7ab7445?w=400&h=300&fit=crop'\r\n        }\r\n      ]\r\n    }\r\n  },\r\n  computed: {\r\n    displayList() {\r\n      return this.isHotDishes ? this.hotDishes : this.menuList\r\n    }\r\n  },\r\n  mounted() {\r\n    if (!this.isHotDishes) {\r\n      this.fetchMenuList()\r\n    }\r\n  },\r\n  methods: {\r\n    async fetchMenuList() {\r\n      const menuStore = useMenuStore()\r\n      await menuStore.fetchMenuList()\r\n      this.menuList = menuStore.menuList\r\n    },\r\n    addToCart(item) {\r\n      // 这里可以添加购物车逻辑\r\n      console.log('添加到购物车:', item)\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.line-clamp-2 {\r\n  display: -webkit-box;\r\n  -webkit-line-clamp: 2;\r\n  -webkit-box-orient: vertical;\r\n  overflow: hidden;\r\n}\r\n</style>\r\n\r\n"],"mappings":"AAsBA,SAASA,YAAW,QAAS,eAAc;AAE3C,eAAe;EACbC,IAAI,EAAE,UAAU;EAChBC,KAAK,EAAE;IACLC,WAAW,EAAE;MACXC,IAAI,EAAEC,OAAO;MACbC,OAAO,EAAE;IACX;EACF,CAAC;EACDC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,EAAE;MACZC,SAAS,EAAE,CACT;QACEC,MAAM,EAAE,MAAM;QACdC,QAAQ,EAAE,MAAM;QAChBC,WAAW,EAAE,qBAAqB;QAClCC,KAAK,EAAE,EAAE;QACTC,QAAQ,EAAE;MACZ,CAAC,EACD;QACEJ,MAAM,EAAE,MAAM;QACdC,QAAQ,EAAE,MAAM;QAChBC,WAAW,EAAE,oBAAoB;QACjCC,KAAK,EAAE,EAAE;QACTC,QAAQ,EAAE;MACZ,CAAC,EACD;QACEJ,MAAM,EAAE,MAAM;QACdC,QAAQ,EAAE,KAAK;QACfC,WAAW,EAAE,iBAAiB;QAC9BC,KAAK,EAAE,EAAE;QACTC,QAAQ,EAAE;MACZ,CAAC,EACD;QACEJ,MAAM,EAAE,MAAM;QACdC,QAAQ,EAAE,KAAK;QACfC,WAAW,EAAE,kBAAkB;QAC/BC,KAAK,EAAE,EAAE;QACTC,QAAQ,EAAE;MACZ;IAEJ;EACF,CAAC;EACDC,QAAQ,EAAE;IACRC,WAAWA,CAAA,EAAG;MACZ,OAAO,IAAI,CAACb,WAAU,GAAI,IAAI,CAACM,SAAQ,GAAI,IAAI,CAACD,QAAO;IACzD;EACF,CAAC;EACDS,OAAOA,CAAA,EAAG;I